/* Set large Action Button style. */
/* All icons for large Action Buttons should be set to 36x36 px */

QToolButton {
     Min-width: 42px;
     Min-height: 42px;
     Max-width: 42px;
     Max-height: 42px;
     background-color: rgb(150,150,150);
     border-style: outset;
     border-width: 3px;
     border-radius: 10px;
     border-color: rgb(120,120,120);
}

QToolButton:pressed, QToolButton:on {
     border-color: rgb(120,120,120);
     background-color: qlineargradient(x1: 1, y0: 1, x2: 1, y2: 1, stop: 0 rgb(40,120,40), stop: 0.4 rgb(80,180,80), stop: 0.6 rgb(80,180,80), stop: 1 rgb(130,230,130)) no repeat;
     border-style: inset;
     padding-top: 2px;
     padding-left: 2px;
}